{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "enableIvy": true,
    "strictTemplates": true
  },
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@auth": [
        "projects/auth/src/public-api.ts"
      ],
      "@shared": [
        "projects/shared/src/public-api.ts"
      ],
      "shared": [
        "dist/shared/shared",
        "dist/shared"
      ],
      "auth": [
        "dist/auth/auth",
        "dist/auth"
      ]
    }
  }
}